{
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ESNext",
    "jsx":"react",
    "lib": ["dom", "esnext"],
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": true
  }
}
